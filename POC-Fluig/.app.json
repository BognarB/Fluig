{
  "type": "kendo-ui-mobile",
  "views": [
    {
      "type": "kendo-ui-mobile:view",
      "name": "home",
      "components": [
        {
          "type": "kendo-ui-mobile:authentication",
          "name": "homeModel",
          "dataProvider": "pocFluig",
          "emailLabel": "Email",
          "passwordLabel": "Password",
          "signinLabel": "Sign In",
          "signinRedirect": "contactsListView",
          "enableRegistration": true,
          "gotoRegisterLabel": "Register",
          "registerEmailLabel": "Email",
          "registerPasswordLabel": "Password",
          "registerNameLabel": "Name",
          "registerLabel": "Register",
          "registerRedirect": "contactsListView",
          "gotoSigninLabel": "Sign In"
        }
      ],
      "title": "Login",
      "addToNavigation": true,
      "icon": "home"
    },
    {
      "type": "kendo-ui-mobile:view",
      "name": "novoContatoView",
      "components": [
        {
          "type": "kendo-ui-mobile:list",
          "name": "novoContatoViewModel",
          "dataProvider": "ramdomUser",
          "collection": "results",
          "imageField": "user.picture.thumbnail",
          "headerField": "user.name.first",
          "subHeaderField": "user.name.last",
          "masterDetails": false,
          "pullToRefresh": false,
          "endlessScroll": false
        }
      ],
      "title": "Novo Contato",
      "addToNavigation": true,
      "icon": "organize"
    },
    {
      "type": "kendo-ui-mobile:view",
      "name": "contactsListView",
      "components": [
        {
          "type": "kendo-ui-mobile:editableList",
          "listExtraFields": [],
          "detailExtraFields": [],
          "components": [
            {
              "type": "kendo-ui-mobile:editableListForm",
              "components": [
                {
                  "type": "kendo-ui-mobile:editableListFormField",
                  "name": "shortText",
                  "title": "Nome:",
                  "inputType": "shortText",
                  "dataBindingOptional": "user.name.first"
                },
                {
                  "type": "kendo-ui-mobile:editableListFormField",
                  "name": "sexo",
                  "title": "Sexo",
                  "inputType": "shortText",
                  "dataBindingOptional": "user.gender"
                },
                {
                  "type": "kendo-ui-mobile:editableListFormField",
                  "name": "email",
                  "title": "Email",
                  "inputType": "shortText",
                  "dataBindingOptional": "user.email"
                },
                {
                  "type": "kendo-ui-mobile:editableListFormField",
                  "name": "tel",
                  "title": "Telefone",
                  "inputType": "shortText",
                  "dataBindingOptional": "user.phone"
                }
              ],
              "name": "editableListForm41",
              "formType": "detail"
            }
          ],
          "name": "contactsListViewModel",
          "dataProvider": "ramdomUser",
          "collection": "results",
          "headerField": "user.name.first",
          "detailImageField": "user.picture.medium",
          "addItemForm": false,
          "editItemForm": false,
          "pullToRefresh": false,
          "endlessScroll": false,
          "deleteItemButton": true
        }
      ],
      "title": "Contatos Favoritos",
      "addToNavigation": true,
      "icon": "organize"
    },
    {
      "type": "kendo-ui-mobile:view",
      "name": "aboutView",
      "components": [
        {
          "type": "kendo-ui-mobile:about",
          "name": "aboutViewModel",
          "appName": "My App",
          "appVersion": "Version 1",
          "appDescription": "App description",
          "contactButton": true,
          "contactLabel": "Contact us",
          "contactMail": "support@example.com",
          "facebookButton": true,
          "facebookLabel": "Like us on Facebook",
          "facebookLink": "https://www.facebook.com/Telerik",
          "twitterButton": true,
          "twitterLabel": "Follow us on Twitter",
          "twitterLink": "https://twitter.com/telerik"
        }
      ],
      "title": "About",
      "addToNavigation": true,
      "icon": "info"
    }
  ],
  "dataProviders": [
    {
      "type": "kendo-ui-mobile:dataProvider",
      "name": "pocFluig",
      "title": "POC-Fluig / POC-Fluig",
      "source": "everlive",
      "everliveKey": "wv0d83ilst7ofhwd",
      "offlineStorage": true
    },
    {
      "type": "kendo-ui-mobile:dataProvider",
      "name": "ramdomUser",
      "title": "RamdomUser",
      "source": "json",
      "url": "https://randomuser.me/api/"
    }
  ],
  "name": "kendoUiMobileApp",
  "navigation": "tabstrip",
  "view": "home",
  "transition": "slide",
  "skin": "flat"
}
